{
  "name": "code-sherlock",
  "version": "3.1.3",
  "description": "AST-based PR reviewer using chunkyyy for semantic code chunking. Analyze code changes with AI-powered review using OpenAI or Claude.",
  "keywords": [
    "pr-review",
    "code-review",
    "ast",
    "chunking",
    "rag",
    "code-analysis",
    "ai",
    "openai",
    "claude",
    "github",
    "gitlab",
    "pull-request",
    "merge-request",
    "static-analysis",
    "code-quality"
  ],
  "homepage": "https://github.com/ProgrammingWithSid/code-sherlock#readme",
  "bugs": {
    "url": "https://github.com/ProgrammingWithSid/code-sherlock/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ProgrammingWithSid/code-sherlock.git"
  },
  "license": "MIT",
  "author": "dev-satender",
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "sherlock": "dist/cli/index.js",
    "code-sherlock": "dist/cli/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "directories": {
    "example": "examples"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "dev": "tsx watch src/cli.ts",
    "format": "prettier --write \"src/**/*.ts\" \"__tests__/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"__tests__/**/*.ts\"",
    "lint": "eslint src __tests__ --ext .ts",
    "lint:fix": "eslint src __tests__ --ext .ts --fix",
    "lint:check": "npm run lint && npm run format:check",
    "prepublishOnly": "npm run lint:check && npm run clean && npm run build && npm run test",
    "start": "node dist/cli.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run lint:check && npm run test"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.0",
    "@octokit/rest": "^20.0.0",
    "chalk": "^4.1.2",
    "chunkyyy": "^0.3.4",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "glob": "^10.3.10",
    "openai": "^4.20.0",
    "ora": "^5.4.1",
    "simple-git": "^3.20.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.4.6",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
